<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="400dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOTO"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_margin="7dp"
            android:id="@+id/text_view_titulo_dialog_galeria_foto"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="7dp"
        android:background="@color/ghostwhite"

        >

        <Button
            android:id="@+id/button_selecionar_dialog_galeria_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selecionar"
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:layout_margin="7dp"
            android:textSize="19dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button_fotografar_dialog_galeria_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fotografar"
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:layout_margin="7dp"
            android:textSize="19dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>
