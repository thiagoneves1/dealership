<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MANUAIS E SERVIÃ‡OS"
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/text_view_titulo_dialog"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cinza"
        android:layout_weight="1"
        android:layout_margin="2dp"
        >

        <EditText
            android:id="@+id/edit_text_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ghostwhite"
            android:layout_margin="2dp"
            android:lines="3"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="7dp"
        android:background="@color/ghostwhite"

        >

        <Button
            android:id="@+id/button_cancelar_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:layout_margin="7dp"
            android:textSize="19dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:background="@color/cinza_escuro"
            android:textColor="@color/ghostwhite"
            android:layout_margin="7dp"
            android:textSize="19dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>
